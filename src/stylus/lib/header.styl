#top
  position relative
  float left
  width 100%
  box-shadow 0 0 4px rgba(0,0,0,.25)
  color #000
  z-index 10
  font-size 20px
  padding 20px 10%
  background-image url("/images/background.jpg")
  background-size cover
  font-weight bolder

  #header
    position relative
    float left
    cursor pointer

    .icon
      position absolute
      font-size 50px
      line-height 17px

    #title
      float left
      width 100%
      padding-left 63px

  #info
    float right
    width 30px
    text-align right
    cursor pointer
    
    #badge
      position absolute
      font-size 10px
      margin-left 25px
      margin-top -30px
      background-color #FF0000
      padding 1px 5px
      border-radius 7px
      color #FFF
      text-align center
