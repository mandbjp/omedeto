@require "lib/layout"

concept-color = #BCE55C

body
  overflow scroll

#content
  #header
    position fixed
    width 100%
    height 50px
    background-color concept-color
    font-size 20px
    color #fff
    text-align center
    padding 10px
    z-index 10

  #main
    position relative
    width 100%
    height 100%
    padding-top 50px  

    #layout
      margin 10%
      border solid 1px #eee
      min-height 500px
      
      .step-container
        text-align left
        
        .step-title
          width 100%
          padding-left 1em
          font-size 1.5 em
          font-weight bolder
          color concept-color - 70%

        .step-message
          width 100%
          color concept-color - 60%
          padding-left 2em
          
      .step-margin-bottom
        padding-bottom 2em

      .form-horizontal
        position relative
        width 100%
        height 100%
        float left

        .form-group
          position relative
          float left
          width 100%
          text-align center
          margin 10px 0
          padding 10px

          .video
            width 100%
            float left
            margin-bottom 10px

            video
              width 200px
              height 200px

          textarea
            width 100%
            height 100px

          button
            width 150px

            span.text
              margin-left 5px

          button.shooting
            background-color concept-color - 30%

          button.send
            background-color concept-color - 60%

            &:disabled
              color: white - 20%

#footer
  position relative
  width 100%
  float left
  text-align center

