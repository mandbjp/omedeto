@require "lib/layout"

body
  overflow scroll

#content
  #main
    position relative
    width 100%
    height 100%
    padding 3%

    #layout
      border solid 1px concept-color
      min-height 500px
      width 100%
      height 100%
      
      .step-container
        text-align left
        
        .step-title
          width 100%
          padding-left 1em
          font-size 1.5 em
          font-weight bolder
          color #333

        .step-message
          width 100%
          color #333
          padding-left 2em

      .form-group.explain
        span.icon
          font-size 200px

      .form-horizontal
        position relative
        width 100%
        height 100%
        float left

        .form-group
          position relative
          float left
          width 100%
          text-align center
          margin 10px 0
          padding 10px

          .video
            width 100%
            height 100%
            float left
            margin-bottom 10px

            video
              max-width 100%
              max-height 250px

          button
            width 150px

            span.text
              margin-left 5px

          button
            border-radius 3px

          button.capture
            background-color concept-color - 60%
            border solid 1px concept-color - 60%

            span.icon
              position absolute
              font-size 25px
              line-height 1.6

            .text
              width 100%
              padding-left 30px

          button.send
            background-color concept-color - 60%
            border solid 1px concept-color - 60%

            &:disabled
              color: white - 20%

        #while-uploading-video
          position absolute
          width 100%
          height 100%
          text-align center
          left 0
          top 0

          .message
            position absolute
            width 100%
            height 100%
            background-color RGBA(0,0,0,0.5)
            text-align center
            padding 20px
            display inline-block
            color #fff
            z-index 10
            left 0
            top 0

            .step-container
              text-align center

              .step-message
                width 100%
                padding initial
                color #fff

        #post-upload-video
          width 100%
          float left

          .step-message
            text-align center
            padding initial

  .notice
    padding 20px
    max-width 400px
    display inline-block
    background-color concept-color + 70%
    border-radius 10px

