@require "lib/layout"

body
  overflow scroll

#content
  #main
    position relative
    width 100%
    height 100%
    padding 3%

    #layout
      border solid 1px concept-color
      min-height 500px
      width 100%
      height 100%
      
      .step-container
        text-align left
        
        .step-title
          width 100%
          padding-left 1em
          font-size 1.5 em
          font-weight bolder
          color #333

        .step-message
          width 100%
          color #333
          padding-left 2em

      .form-group.explain
        span.icon
          font-size 230px

      .form-horizontal
        position relative
        width 100%
        height 100%
        float left

        .form-group
          position relative
          float left
          width 100%
          text-align center
          margin 10px 0
          padding 10px

          .video
            width 100%
            height 100%
            float left
            margin-bottom 10px

            video
              max-width 100%
              max-height 250px

          button
            width 43%
            max-width 200px
            min-width 110px
            border-radius 3px
            margin 5px

            span.text
              margin-left 5px

          button.capture
            width 180px
            background-color concept-color - 60%
            border solid 1px concept-color - 60%
            margin initial

            span.icon
              position absolute
              font-size 25px
              line-height 1.6

            .text
              width 100%
              padding-left 30px

          button.send
            background-color concept-color - 60%
            border solid 1px concept-color - 60%

            &:disabled
              color: white - 20%

        #while-uploading-video
          position absolute
          width 100%
          height 100%
          text-align center
          left 0
          top 0

          .message
            position absolute
            width 100%
            height 100%
            background-color RGBA(0,0,0,0.5)
            text-align center
            padding 20px
            display inline-block
            color #fff
            z-index 10
            left 0
            top 0

            .step-container
              position absolute
              text-align center
              width 100%
              top 50%
              left 0
              transform translateY(-50%)

              .step-message
                width 100%
                padding initial
                color #fff
                margin-bottom 20px

              #loadingBar
                width 100%
                top 50%
                left 0
              
                .spinner
                  position relative
                  width 100px
                  height 40px
                  text-align center
                  font-size 20px
                  margin-left auto
                  margin-right auto
                  z-index 20
              
                  > div
                    background-color #fff
                    height 100%
                    width 10px
                    display inline-block
                    -webkit-animation stretchdelay 1.2s infinite ease-in-out
                    animation stretchdelay 1.2s infinite ease-in-out
              
                  .rect2
                    -webkit-animation-delay -1.1s
                    animation-delay -1.1s
                  .rect3
                    -webkit-animation-delay -1.0s
                    animation-delay -1.0s
                  .rect4
                    -webkit-animation-delay -0.9s
                    animation-delay -0.9s
                  .rect5
                    -webkit-animation-delay -0.8s
                    animation-delay -0.8s

        #post-upload-video
          width 100%
          float left

          .step-message
            text-align center
            padding initial

  .notice
    padding 20px
    max-width 400px
    display inline-block
    background-color concept-color + 70%
    border-radius 10px

@-webkit-keyframes stretchdelay
  0%, 40%, 100%
    -webkit-transform scaleY(0.4)
  20%
    -webkit-transform scaleY(1.0)

@keyframes stretchdelay
  0%, 40%, 100%
    transform scaleY(0.4)
    -webkit-transform scaleY(0.4)
  20%
    transform scaleY(1.0)
    -webkit-transform scaleY(1.0)
