@require "lib/layout"

body
  overflow scroll

#content
  #main
    position relative
    width 100%
    height 100%
    padding 3%

    #layout
      border solid 1px concept-color
      min-height 500px
      width 100%
      height 100%

      .form-horizontal
        position relative
        width 100%
        height 100%
        float left

        .form-group
          position relative
          float left
          width 100%
          text-align center
          margin 10px 0
          padding 10px

          textarea
            width 100%
            height 100px

          button
            width 150px

            span.text
              margin-left 5px

          button.send
            background-color concept-color - 60%

          .stampList
            .item
              position relative
              width 80px
              height 80px
              padding 10px
              float left
              cursor pointer

              img
                width 100%

            .item:hover
              background-color #eee

