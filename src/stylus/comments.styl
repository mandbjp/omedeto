@require "lib/layout"

body
  overflow hidden

#content
  #main
    position relative
    width 100%
    height 100%
    padding 3%

    #layout
      border solid 1px concept-color
      min-height 500px
      width 100%
      height 100%

      .form-horizontal
        position relative
        width 100%
        height 100%
        float left

        .form-group
          position relative
          float left
          width 100%
          text-align center
          margin 10px 0
          padding 10px

          button
            width 150px

            span.text
              margin-left 5px

          button.send
            background-color concept-color - 60%

        .form-group.history
          position relative
          width 100%
          height 100%
          padding-bottom 55px

          #history
            position relative
            width 100%
            height 100%
            overflow-y scroll
            -webkit-overflow-scrolling touch

            .commentList
              position relative
              float left
              width 100%

              .item
                width 100%
                text-align left
                float left
                margin 3px 0

                span.nickname
                  max-width 35%
                  float left
                  padding 5px 0
                  text-overflow ellipsis
                  white-space nowrap
                  overflow hidden

                span.commentContents
                  max-width 60%
                  float left
                  padding-left 5px
                  word-break break-all

                  span.text
                    float left
                    background-color #eee
                    padding 5px
                    border-radius 10px

                  span.text::before
                    position absolute
                    content ""
                    border 5px solid
                    border-color transparent #eee transparent transparent
                    margin-left -14px
                    margin-top 5px

                  img.stamp
                    float left
                    width 40px
                    height 40px

                  span.sntdt
                    float left
                    font-size 10px
                    line-height 30px
                    padding-left 5px

        .input-container
          position fixed
          bottom 0
          left 0
          padding 3%

          .input-group
            position relative
            width 100%
            float left

            .stamp
              background-color #fff
              padding 6px 12px 2px

              .icon
                font-size 19px

            .send
              background-color concept-color - 60%

          .stampList
            position relative
            width 100%
            float left
            background-color #eee
            max-height 200px
            overflow-y scroll

            .item
              position relative
              width 70px
              height 70px
              padding 10px
              float left
              cursor pointer

              img
                width 100%

            .item:hover
              background-color #eee


