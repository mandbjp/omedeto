@require "lib/layout"

body
  overflow scroll

#content
  #main
    position relative
    width 100%
    height 100%
    padding 3%

    #layout
      border solid 1px concept-color
      min-height 500px
      width 100%
      height 100%

      .form-horizontal
        position relative
        width 100%
        height 100%
        float left

        .form-group
          position relative
          float left
          width 100%
          text-align center
          margin 10px 0
          padding 10px

          textarea
            width 100%
            height 100px

          button
            width 150px

            span.text
              margin-left 5px

          button.send
            background-color concept-color - 60%

        .form-group.history
          position relative
          width 100%
          height 100%
          padding-bottom 55px

          #history
            width 100%
            height 100%
            float left
            overflow scroll

            .commentList
              position relative
              float left

              .item
                width 100%
                text-align left
                float left
                margin 3px 0

                span.nickname
                  max-width 30%
                  float left
                  padding 5px 0

                span.commentContents
                  max-width 70%
                  float left
                  padding-left 5px

                  span.text
                    float left
                    background-color #eee
                    padding 5px
                    border-radius 10px

                  span.text::before
                    position absolute
                    content ""
                    border 5px solid
                    border-color transparent #eee transparent transparent
                    margin-left -14px
                    margin-top 5px

                  img.stamp
                    float left
                    width 40px
                    height 40px

                  span.sntdt
                    float left
                    font-size 10px
                    line-height 30px
                    padding-left 5px

        .input-container
          position fixed
          bottom 0
          left 0
          padding 3%

          .input-group
            position relative
            width 100%
            float left

            .send
              background-color concept-color - 60%

          .stampList
            position relative
            width 100%
            float left
            backgroun-color #eee

            .item
              position relative
              width 80px
              height 80px
              padding 10px
              float left
              cursor pointer

              img
                width 100%

            .item:hover
              background-color #eee


