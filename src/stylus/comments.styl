@require "lib/layout"

body
  overflow scroll

#content
  #main
    position relative
    width 100%
    height 100%
    padding 3%

    #layout
      border solid 1px concept-color
      min-height 500px
      width 100%
      height 100%

      .form-horizontal
        position relative
        width 100%
        height 100%
        float left

        .form-group
          position relative
          float left
          width 100%
          text-align center
          margin 10px 0
          padding 10px

          textarea
            width 100%
            height 100px

          button
            width 150px

            span.text
              margin-left 5px

          button.send
            background-color concept-color - 60%

          .stampList
            .item
              position relative
              width 80px
              height 80px
              padding 10px
              float left
              cursor pointer

              img
                width 100%

            .item:hover
              background-color #eee
        .form-group.history
          position relative
          width 100%
          height 100%
          padding-bottom 55px

          #history
            width 100%
            height 100%
            float left
            overflow scroll

            .commentList
              position relative
              float left

              .item
                width 100%
                text-align left
                float left
                margin 7px 0

                span.text
                  background-color #eee
                  padding 5px
                  border-radius 10px

                span.sntdt
                  font-size 10px

                img.stamp
                  width 40px
                  height 40px

        .input-group
          position fixed
          bottom 0
          left 0
          padding 3%
