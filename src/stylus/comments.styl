@require "lib/layout"

concept-color = #BCE55C

body
  overflow scroll

#content
  #header
    position fixed
    width 100%
    height 50px
    background-color concept-color
    font-size 20px
    color #fff
    text-align center
    padding 10px
    z-index 10

  #main
    position relative
    width 100%
    height 100%
    padding-top 50px  

    #layout
      margin 10%
      border solid 1px #eee
      min-height 500px

      .form-horizontal
        position relative
        width 100%
        height 100%
        float left

        .form-group
          position relative
          float left
          width 100%
          text-align center
          margin 10px 0
          padding 10px

          textarea
            width 100%
            height 100px

          button
            width 150px

            span.text
              margin-left 5px

          button.send
            background-color concept-color - 60%

          .stampList
            .item
              position relative
              width 80px
              height 80px
              padding 10px
              float left
              cursor pointer

              img
                width 100%

            .item:hover
              background-color #eee

