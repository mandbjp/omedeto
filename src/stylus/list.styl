@require "./lib/layout"

#content
  .tool
    float left
    padding 10px 0
    width 100%
  
    .search
      margin 5px 0
  
      .input-group
        float left
        width 100%

        button.searchBtn
          background-color concept-color - 60%

    .orderby
      text-align right

      button
        position relative
        margin-left 7px

        span.icon
          position absolute
          line-height 2
          left 0
          width 40px

        span.text
          position relative
          width 100%
          padding-left 20px

  .list
    width 100%
    height 100%
    padding-bottom 60px
    overflow scroll

    .thumbnail
      position relative
      padding initial
      overflow hidden
      cursor pointer

      .imageLayout
        width 100%
        height 200px
        background-color #000

        .img-thumbnail
          position relative
          width 100%
          border initial
          border-radius initial
          top 50%
          transform translateY(-50%)
          padding initial
          background-color $000

      .caption
        position absolute
        width 100%
        background-color RGBA(0,0,0,.6)
        bottom 0
        color #eee
        font-size 13px

        .contents
          position relative
          width 100%
          float left

          .index, .view
            width 50%
            float left

          .view
            text-align right

            .icon
              margin-right 5px

          .nickname
            position relative
            width 100%
            min-height 20px
            float left

            .icon
              position absolute
              width 20px

            .text
              width 100%
              float left
              padding-left 20px
              overflow hidden
              white-space nowrap
              text-overflow ellipsis

      .showVideo
        display none
        position absolute
        width 100%
        height 100%
        top 0
        background-color rgba(255,255,255,0.5)
        
        .showText
          margin-top 80px
          text-align center
          font-size 25px
          color #003399
          opacity 0.7
          font-weight bold

          span
            font-size 23px
            margin-right 3px

    .thumbnail:hover
      .showVideo
        display block
        z-index 5

    .thumnail:active
      border 1px solid #4374D9

    .loadmore
      text-align center
      height 100px

      .load-status
        margin 8px 0
        color #999

      img
        width 48px
        hegiht 48px
        display none

    .load-more.loading
      button
        display none

      img
        display inline

  .detail
    position absolute
    top 0
    width 100%
    height 100%
    z-index 20
    background-color rgba(0,0,0,.4)

    .video-modal
      width 100%
      height 100%
      text-align center
      padding 7%

      video
        height 100%
        max-width 100%
