@require "./lib/layout"

concept-color = #BCE55C

#top
  position relative
  float left
  width 100%
  boxk-shadow 0 0 4px rgba(0,0,0,.25)
  background-color concept-color
  color #FFF
  z-index 10
  font-size 20px
  padding 25px 10%

  #header
    float left

    #title
      float left

#content
  position relative
  float left
  height 100%
  margin-top -78px
  padding-top 78px

  .navigator
    border-top 1px solid #eee
    border-bottom 1px solid #eee
    padding 10px
    margin-bottom 10px
  
  .tool
    float left
    padding 10px
    padding-top 0
    width 100%
  
    .search
      margin 5px 0
  
      .input-group
        float left
        width 100%

    .orderby
      text-align right

      button
        position relative
        margin-left 7px

        span.icon
          position absolute
          line-height 2
          left 0
          width 40px

        span.text
          position relative
          width 100%
          padding-left 20px

  .list
    width 100%
    height 100%
    padding-bottom 100px
    overflow scroll

    .thumbnail
      position relative
      padding initial
      padding-bottom 59px!important
      overflow hidden
      cursor pointer

      .imageLayout
        width 100%
        height 200px

        .img-thumbnail
          width 100%
          border initial

      .caption
        position absolute
        border-top solid 1px #EEE
        width 100%
        background-color #FFF
        bottom 0

        .nickname
          position relative
          width 100%
          min-height 20px

          .icon
            position absolute
            width 20px

          .text
            width 100%
            float left
            padding-left 20px
            overflow hidden
            white-space nowrap
            text-overflow ellipsis

      .showVideo
        display none
        position absolute
        width 100%
        height 100%
        top 0
        background-color rgba(255,255,255,0.5)
        
        .showText
          margin-top 40%
          text-align center
          font-size 25px
          color #003399
          opacity 0.7
          font-weight bold

          span
            font-size 23px
            margin-right 3px

    .thumbnail:hover
      .showVideo
        display block
        z-index 5

    .thumnail:active
      border 1px solid #4374D9

    .loadmore
      text-align center
      height 70px

      .load-status
        margin 8px 0
        color #999

      img
        width 48px
        hegiht 48px
        display none

    .load-more.loading
      button
        display none

      img
        display inline

  .detail
    position absolute
    top 0
    width 100%
    height 100%
    z-index 20
    background-color rgba(0,0,0,.4)

    .video-modal
      width 100%
      height 100%
      text-align center
      padding 10%

      video
        height 100%
        max-width 100%
