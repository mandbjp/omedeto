@require "./lib/layout"

#content
  .tool
    float left
    padding 10px 0
    width 100%
  
    .search
      margin 5px 0
  
      .input-group
        float left
        width 100%

        button.searchBtn
          background-color concept-color - 60%

    .orderby
      text-align right

      button
        position relative
        margin-left 7px

        span.icon
          position absolute
          line-height 2
          left 0
          width 40px

        span.text
          position relative
          width 100%
          padding-left 20px

  .list
    width 100%
    height 100%
    padding-bottom 60px
    overflow scroll
    -webkit-overflow-scrolling touch

    .thumbnail
      position relative
      padding initial
      overflow hidden
      cursor pointer

      .imageLayout
        width 100%
        height 200px
        background-color #000

        .img-thumbnail
          position relative
          width 100%
          border initial
          border-radius initial
          top 50%
          transform translateY(-50%)
          padding initial
          background-color $000

      .caption
        position absolute
        width 100%
        background-color RGBA(0,0,0,.6)
        bottom 0
        color #eee
        font-size 13px

        .contents
          position relative
          width 100%
          float left

          .index, .view
            width 50%
            float left

          .view
            text-align right

            .icon
              margin-right 5px

          .nickname
            position relative
            width 100%
            min-height 20px
            float left

            .icon
              position absolute
              width 20px

            .text
              width 100%
              float left
              padding-left 20px
              overflow hidden
              white-space nowrap
              text-overflow ellipsis

      .showVideo
        display none
        position absolute
        width 100%
        height 100%
        top 0
        background-color rgba(255,255,255,0.5)
        
        .showText
          margin-top 80px
          text-align center
          font-size 25px
          color #003399
          opacity 0.7
          font-weight bold

          span
            font-size 23px
            margin-right 3px

      .loadingBar
        position absolute
        width 100%
        top 50%
        left 0
        transform translateY(-50%)
      
        .spinner
          position relative
          width 100px
          height 30px
          text-align center
          font-size 20px
          margin-left auto
          margin-right auto
          z-index 20
      
          > div
            background-color #eee
            height 100%
            width 5px
            display inline-block
            -webkit-animation stretchdelay 1.2s infinite ease-in-out
            animation stretchdelay 1.2s infinite ease-in-out
      
          .rect2
            -webkit-animation-delay -1.1s
            animation-delay -1.1s
          .rect3
            -webkit-animation-delay -1.0s
            animation-delay -1.0s
          .rect4
            -webkit-animation-delay -0.9s
            animation-delay -0.9s
          .rect5
            -webkit-animation-delay -0.8s
            animation-delay -0.8s


    .loadmore
      text-align center
      height 100px

      .load-status
        margin 8px 0
        color #999

      img
        width 48px
        hegiht 48px
        display none

    .load-more.loading
      button
        display none

      img
        display inline

  .detail
    position absolute
    top 0
    width 100%
    height 100%
    z-index 20

    .video-modal
      width 100%
      height 100%
      text-align center
      padding 7%

      video
        height 100%
        max-width 100%


  // Wider than extra small devices
  @media screen and (min-width sm-min)
    .list
      .thumbnail:hover
        .showVideo
          display block
          z-index 5


@-webkit-keyframes stretchdelay
  0%, 40%, 100%
    -webkit-transform scaleY(0.4)
  20%
    -webkit-transform scaleY(1.0)

@keyframes stretchdelay
  0%, 40%, 100%
    transform scaleY(0.4)
    -webkit-transform scaleY(0.4)
  20%
    transform scaleY(1.0)
    -webkit-transform scaleY(1.0)
