extends layout

block style
  link(rel="stylesheet", href="/css/local_video.css")
  link(rel="stylesheet", href="//cdn.jsdelivr.net/jquery.fileupload/9.5.2/css/jquery.fileupload.css")

block content

block footer
 
block script
  script(src="/js/local_video.js")
  script(type="text/v-template")#template
    #header
      #title="Omedeto App"
    #main
      #layout
        .form-horizontal
          .form-group
            .video
              video(:src="videoPath", loop, autoplay, preload="true", controls)
            button.shooting.btn.btn-success.fileinput-button
              input#upload(type="file", name="file", accept="video/*", @change="upload")
              span.glyphicon.glyphicon-camera
              span.text="撮影する"
            .create-thumbnail
              canvas
              img#thumbnail-test(:src="imagePath")
          .form-group
            textarea.input-sm(
              v-model="message"
              row="5"
              placeholder="お祝いメッセージを入力"
            )
          .form-group
            button.send.btn.btn-success(@click="send", :disabled="sendBtnDissabled")
              span.glyphicon.glyphicon-envelope
              span.text="送る"
